
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutFrontend.cshtml";
}
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">
                    <i class="db-left"></i>
                    Trainer
                    <i class="db-right"></i>
                </span>
                <h2 class="mb-3">Our Coaches</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row no-gutters">
            <div class="sidebar-box">
                <form action="#" class="search-form">
                    <div class="form-group">
                        <div class="icon">
                            <span class="icon-search"></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Search...">
                    </div>
                </form>
            </div>
            <div class="sidebar-box ftco-animate">
                <h3 class="heading2">Tag Cloud</h3>
                <div class="tagcloud">
                    <a href="#" class="tag-cloud-link">Men</a>
                    <a href="#" class="tag-cloud-link">Women</a>
                    <a href="#" class="tag-cloud-link">Old</a>
                    <a href="#" class="tag-cloud-link">Top</a>
                </div>
            </div>
            <!-- Rows Show Coaches -->
            @{
                for (int i = 0; i < 6; i++)
                {
                    <div class="col-lg-6 d-flex">
                        <div class="coach d-sm-flex align-items-stretch">
                            <div class="img" style="background-image: url(../Content/images/trainer-1.jpg);"></div>
                            <div class="text py-4 px-5 ftco-animate">
                                <span class="subheading">Sport name</span>
                                <h3><a href="#">Coach name</a></h3>
                                <p>Coach biographieCoach biographieCoach biographieCoach biographieCoach biographieCoach biographieCoach biographie </p>
                                <ul class="ftco-social-media d-flex mt-4">
                                    <li class="ftco-animate"><a href="#" class="mr-2 d-flex justify-content-center align-items-center"><span class="icon-twitter"></span></a></li>
                                    <li class="ftco-animate"><a href="#" class="mr-2 d-flex justify-content-center align-items-center"><span class="icon-facebook"></span></a></li>
                                    <li class="ftco-animate"><a href="#" class="mr-2 d-flex justify-content-center align-items-center"><span class="icon-instagram"></span></a></li>
                                </ul>
                                <p></p>
                            </div>
                        </div>
                    </div>
                }
            }
            <!--End Rows Show Coaches -->

        </div>
    </div>
</section>

