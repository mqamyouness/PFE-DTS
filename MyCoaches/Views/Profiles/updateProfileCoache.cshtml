
@{
    ViewBag.Title = "updateProfileCoache";
    Layout = "~/Views/_LayoutFrontend.cshtml";
    var coache = (List<MyCoaches.Models.Personne>)ViewData["coache"];
   
}
<section class="hero-wrap js-fullheight" >
    <div class="overlay" style="background-image: url(/Content/images/bg_2.jpg);" data-stellar-background-ratio="0.5"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-end">
            <div class="col-md-12 text-center ftco-animate" style="background-color: #ffffff52;padding: 8%;margin-top: 5%;">
                <form id="form_info" method="post" action="confirmedInfo">
                    <div class="form-row">

                        <div class="form-group col-md-3">
                            <div class="card" style="width: 12rem;height: 16rem;">
                                <img class="card-img-top" src="/Content/images/@(coache[0].Photoprofile)" alt="Card image cap" id="profile" style="cursor: pointer;width: 11.9rem;height: 14rem;">
                                <label for="img" id="labelimg" style="color: #000;cursor: pointer;">Change it</label>
                                <input type="file" name="img" style="display: none;" id="img" accept="image/x-png,image/gif,image/jpeg" />
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" value=" @coache[0].Nom">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="lastname">Last name</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="last name" value=" @coache[0].Prenom">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" name="username" value=" @coache[0].Username">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="@coache[0].Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone" value=" @coache[0].Telephone">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="dateNc">Date Nc</label>
                            <input type="date" class="form-control" name="dateNc" id="dateNc" value=" @coache[0].DateNc">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="sexe">Sexe</label>
                            <select id="sexe" name="sexe" class="form-control">
                                <option value="men" @{ if (coache[0].Sexe == "men") { @("seleced")  } }>Men</option>
                                <option value="women" @{ if (coache[0].Sexe == "women") { @("seleced")  } }>Women</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="numerocarte">Numero carte bancaire</label>
                            <input type="text" class="form-control" name="numerocarte" id="numerocarte" value="">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="datefincarte">Date Fin</label>
                            <input type="month" class="form-control" name="datefincarte" id="datefincarte" value="">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="cvc">CVC</label>
                            <input type="text" class="form-control" id="cvc" name="cvc" value="" maxlength="3">
                        </div>
                    </div>
                    <div class="form-group" id="goup_coaches">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="experienceyers">Experience (Years)</label>
                                <input type="number" class="form-control" id="experience" min="0" name="experience" value="@coache[0].Entraineurs.First().Experience">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="datedub">Date Dub Coacheing</label>
                                <input type="date" class="form-control" id="datedub" name="datedubcoache" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="textCertification1">Text Certification</label>
                            <textarea class="form-control" rows="7" style="color: white;" id="textCertification1" name="textCertification[]" placeholder="anything for your Certification"></textarea>
                            <div class="form-row" id="imgs"></div>
                            <div id="uploadCrf" class="rounded"><i class="fa fa-upload"></i> </div>
                            <input type="file" style="display: none;" id="imgCertification" name="imgCertification[]" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width: 250px;">Confirmed</button>
                </form>
            </div>
        </div>
    </div>
</section>
