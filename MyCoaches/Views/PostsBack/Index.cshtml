@model IEnumerable<MyCoaches.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
@{Html.RenderPartial("../PartielsBackend/Filter");}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatePost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextPost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Choix.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatePost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextPost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choix.Category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
