<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
        <link rel="stylesheet" href="~/Content/css/open-iconic-bootstrap.min.css">
        <link rel="stylesheet" href="~/Content/css/animate.css">
        <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
        <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
        <link rel="stylesheet" href="~/Content/css/aos.css">
        <link rel="stylesheet" href="~/Content/css/ionicons.min.css">
        <link rel="stylesheet" href="~/Content/css/flaticon.css">
        <link rel="stylesheet" href="~/Content/css/icomoon.css">
        <link rel="stylesheet" href="~/Content/css/style.css">
        <title>Login</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" href="~/Home">MY COACHS</a>
            </div>
        </nav>
        <section class="hero-wrap js-fullheight">
            <div class="overlay" style="background-image: url(/Content/images/bg_2.jpg);" data-stellar-background-ratio="0.5"></div>
            <div class="container">
                <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-end">
                    <div class="col-md-12 text-center ftco-animate">
                        <h1 class="mb-3 bread" style="background-image: url(/Content/images/bg_1.jpg);" data-stellar-background-ratio="0.5">Get Started</h1>
                        <p class="breadcrumbs" id="btnconnect">
                            <span class="mr-2">
                                <a class="btn " data-toggle="modal" data-target="#exampleModalCenter">Login</a>
                            </span>|
                            <span>
                                <a class="btn " data-toggle="modal" data-target="#exampleModalCenter2">Sign up</a>
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="i10 modal-title">Welcome Back !</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="post" action="~/Connect/Login">
                        <div class="modal-body">
                            <p class="i10">Log in to your account to continue:</p>
                            <label for="exampleInputEmail1" class="i10">Username/Email:</label>
                            <div class="form-group">
                                <input type="text" class=" i10 form-control" placeholder="Your Email Or Username" name="username1" required />
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <label for="password1" class="i10">Password:</label>
                            <input type="password" class="form-control i10" id="password1" placeholder="Password" name="password1" required>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="check1" name="check1">
                                <label class=" i10 form-check-label" for="check1">Save My Password</label>
                            </div>
                            <br>
                            <p class=" i10 ">Not registered? <a style="cursor: pointer;" data-dismiss="modal" data-toggle="modal" data-target="#exampleModalCenter2">Create an account</a></p>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" name="login">Login</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="i10 modal-title">Create A New Account </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form method="post" action="~/Connect/Singup">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="email2" class="i10">Email address:</label>
                                <input type="text" class=" i10 form-control" placeholder="Your Email" name="email2" id="email2" required />
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="username2" class="i10">Username:</label>
                                <input type="text" class=" i10 form-control" required placeholder="Usrname" name="username2" id="username2" />
                            </div>
                            <div class="form-group">
                                <label for="password2" class="i10">Password:</label>
                                <input type="password" class="form-control i10" id="password2" name="password2" required placeholder="Enter Your Password">
                            </div>
                            <div class="form-group">
                                <label for="password22" class="i10">Confirm Password:</label>
                                <input type="password" class="form-control i10" id="password22" name="password22" required placeholder="Enter Your Password">
                            </div>
                            <br>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="check2" name="check2">
                                <label class=" i10 form-check-label" for="check2">By signing up, you agree with the terms and conditions .</label>
                            </div>
                            <p class=" i10 ">You Already Have An Account? <a style="cursor: pointer;" data-dismiss="modal" data-toggle="modal" data-target="#exampleModalCenter">Login</a></p>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Sign up</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="messagediv" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="i10 modal-title">Welcome  !</h2>
                    </div>
                    <div class="modal-body">
                        <label class="i10">Check your email Please</label>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-primary" id="link">confirm account</a>
                        <a class="btn btn-primary" href="~/Home/Index">Go To Home Page</a>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/Scripts/js/jquery.min.js"></script>
        <script src="~/Scripts/js/jquery-migrate-3.0.1.min.js"></script>
        <script src="~/Scripts/js/popper.min.js"></script>
        <script src="~/Scripts/js/bootstrap.min.js"></script>
        <script src="~/Scripts/js/jquery.easing.1.3.js"></script>
        <script src="~/Scripts/js/jquery.waypoints.min.js"></script>
        <script src="~/Scripts/js/jquery.stellar.min.js"></script>
        <script src="~/Scripts/js/owl.carousel.min.js"></script>
        <script src="~/Scripts/js/jquery.magnific-popup.min.js"></script>
        <script src="~/Scripts/js/aos.js"></script>
        <script src="~/Scripts/js/jquery.animateNumber.min.js"></script>
        <script src="~/Scripts/js/bootstrap-datepicker.js"></script>
        <script src="~/Scripts/js/jquery.timepicker.min.js"></script>
        <script src="~/Scripts/js/scrollax.min.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
        <script src="~/Scripts/js/google-map.js"></script>
        <script src="~/Scripts/js/main.js"></script>
        @{
            if (Session["newuser"] != null)
            {
                <script>
                    $("#btnconnect").css("display", "none");
                    $("#messagediv").addClass("show")
                        .css("display", "block");
                    var link = "http://localhost:64455/Connect/confirmed?TeXtVaLiDatIonFoRyOuUsErFoRvAlIdCoMpt=";
                        var src ="@Session["newuser"].ToString()";
                    $("#link").attr("href", link+src );
                </script>
                Session["newuser"] = null;
            }
        }
    </body>
</html>