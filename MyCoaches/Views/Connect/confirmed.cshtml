@{ 
    var personne = (List<MyCoaches.Models.Personne>)ViewData["personne"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/css/aos.css">
    <link rel="stylesheet" href="~/Content/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/icomoon.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <title>Login</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="~/Home">Ya Trini</a>
        </div>
    </nav>
    <section class="hero-wrap js-fullheight">
        <div class="overlay" style="background-image: url(/Content/images/bg_2.jpg);" data-stellar-background-ratio="0.5"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-end">
                <div class="col-md-12 text-center ftco-animate" style="background-color: #ffffff52;padding: 8%;margin-top: 5%;">
                    <form id="form_info" method="post" action="confirmedInfo">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <div class="card" style="width: 12rem;height: 16rem;">
                                    <img class="card-img-top" src="/Content/images/person_0.jpg" alt="Card image cap" id="profile" style="cursor: pointer;width: 11.9rem;height: 14rem;">
                                    <label for="img" id="labelimg" style="color: #000;cursor: pointer;">Change it</label>
                                    <input type="file" name="img" style="display: none;" id="img" accept="image/x-png,image/gif,image/jpeg" />
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="lastname">Last name</label>
                                <input type="text" class="form-control" id="lastname" name="lastname" placeholder="last name"  required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" name="username"  value="@personne.First().Username" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" value="**************" readonly>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="@personne.First().Email" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="phone">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="dateNc">Date Nc</label>
                                <input type="date" class="form-control" name="dateNc" id="dateNc" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="sexe">Sexe</label>
                                <select id="sexe" name="sexe" class="form-control" required>
                                    <option value="null" selected>Choose...</option>
                                    <option value="men">Men</option>
                                    <option value="women">Women</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="numerocarte">Numero carte bancaire</label>
                                <input type="text" class="form-control" name="numerocarte" id="numerocarte">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="datefincarte">Date Fin</label>
                                <input type="month" class="form-control" name="datefincarte" id="datefincarte">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="cvc">CVC</label>
                                <input type="text" class="form-control" id="cvc" name="cvc">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-secondary active" style="width: 250px;">
                                    <input type="radio" name="options" id="option1" autocomplete="off" checked> Client
                                </label>
                                <label class="btn btn-secondary" style="width: 250px;">
                                    <input type="radio" name="options" id="option2" autocomplete="off"> Coache
                                </label>
                            </div>
                        </div>
                        <div class="form-group" id="goup_coaches">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="experienceyers">Experience (Years)</label>
                                    <input type="number" class="form-control" id="experience" min="0" name="experience">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="datedub">Date Dub Coacheing</label>
                                    <input type="date" class="form-control" id="datedub" name="datedubcoache">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="textCertification1">Text Certification</label>
                                <textarea class="form-control" rows="7" style="color: white;" id="textCertification1" name="textCertification[]" placeholder="anything for your Certification"></textarea>
                                <div class="form-row" id="imgs"></div>
                                <div id="uploadCrf" class="rounded"><i class="fa fa-upload"></i> </div>
                                <input type="file" style="display: none;" id="imgCertification" name="imgCertification[]" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 250px;">Confirmed</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Scripts/js/popper.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/js/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/js/jquery.stellar.min.js"></script>
    <script src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/js/aos.js"></script>
    <script src="~/Scripts/js/jquery.animateNumber.min.js"></script>
    <script src="~/Scripts/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/js/jquery.timepicker.min.js"></script>
    <script src="~/Scripts/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/Scripts/js/google-map.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $("input").css("color", "#fff")
                .css("padding-left", "5%");
            $("#profile").click(function () {
                $("#img").click();
            });
            $("#img").on("change", function (event) {
                var tmppath = URL.createObjectURL(event.target.files[0]);
                $("#profile").fadeIn("fast").attr('src', URL.createObjectURL(event.target.files[0]));
            });
            $("#uploadCrf").click(function () {
                $("#imgCertification").click();
            });
            if ($("#option2").checked) {
                alert("h");
            }
        });
    </script>
</body>
</html>

